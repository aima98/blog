<div class="container mt-5">
<%= form_for([@user, @post]) do |f| %>
    <div class="form-group">
    <strong><%= f.label :title %></strong><br />
      <%= f.text_field :title, class: "form-control border-2 border-dark mt-1" %>
    </div><br />
    <div class="form-group">
      <strong><%= f.label :text %></strong>
      <%= f.text_area :text, class: "form-control border-2 border-dark mt-1", rows: 4 %>
    </div>
    <div class="form-group">
      <%= f.submit "Create New Post", class: "btn btn-success mt-4" %>
    </div>
  <% end %>
  </div>